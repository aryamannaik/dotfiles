# This is the template for ~/.zshrc.
# It will be copied to the user's home directory by install.sh.

# --- minimal setup ---
# Homebrew env â€” ensure brew's bin is first in PATH
if [[ -x /opt/homebrew/bin/brew ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ -x /usr/local/bin/brew ]]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi

export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)

# Helpful defaults
export EDITOR="nvim"
alias vi="nvim"
alias vim="nvim"
alias cat="bat"

export PATH="$HOME/bin:$PATH"

# Initialize oh-my-zsh
# shellcheck source=/Users/user/.oh-my-zsh/oh-my-zsh.sh
source "$ZSH/oh-my-zsh.sh"


# fzf: history reverse search on Ctrl-R + sane defaults
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border"
if command -v fd >/dev/null 2>&1; then
  export FZF_DEFAULT_COMMAND='fd --type f --hidden --exclude .git'
  export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
fi

set -o vi

eval "$(zoxide init bash)"

